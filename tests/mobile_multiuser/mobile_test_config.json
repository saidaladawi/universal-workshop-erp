        },
        "test_users": [
            {
                "username": "mobile_admin_test",
                "password": "test_admin_123",
                "role": "Workshop Admin",
                "permissions": [
                    "all"
                ],
                "expected_dashboard": "/app/desk"
            },
            {
                "username": "mobile_tech_test",
                "password": "test_tech_123",
                "role": "Technician",
                "permissions": [
                    "work_order",
                    "task",
                    "timesheet"
                ],
                "expected_dashboard": "/app/work-order"
            },
            {
                "username": "mobile_cs_test",
                "password": "test_cs_123",
                "role": "Customer Service",
                "permissions": [
                    "customer",
                    "quotation",
                    "communication"
                ],
                "expected_dashboard": "/app/customer"
            },
            {
                "username": "mobile_inv_test",
                "password": "test_inv_123",
                "role": "Inventory Manager",
                "permissions": [
                    "item",
                    "stock",
                    "purchase"
                ],
                "expected_dashboard": "/app/item"
            },
            {
                "username": "mobile_owner_test",
                "password": "test_owner_123",
                "role": "Workshop Owner",
                "permissions": [
                    "dashboard",
                    "reports",
                    "analytics"
                ],
                "expected_dashboard": "/app/dashboard"
            }
        ],
        "test_scenarios": {
            "responsive_design": {
                "description": "Test responsive design across different screen sizes",
                "breakpoints": [
                    320,
                    375,
                    414,
                    768,
                    1024,
                    1200
                ],
                "checks": [
                    "no_horizontal_scroll",
                    "touch_friendly_buttons",
                    "readable_text_size",
                    "accessible_navigation"
                ]
            },
            "arabic_rtl_interface": {
                "description": "Test Arabic RTL interface layout and functionality",
                "locales": [
                    "ar-EG",
                    "ar-SA",
                    "ar-AE"
                ],
                "checks": [
                    "rtl_text_direction",
                    "mirrored_layout",
                    "arabic_font_rendering",
                    "proper_text_alignment"
                ]
            },
            "authentication_flows": {
                "description": "Test authentication and session management",
                "flows": [
                    "standard_login",
                    "concurrent_sessions",
                    "session_persistence",
                    "logout_cleanup"
                ],
                "checks": [
                    "login_success",
                    "session_isolation",
                    "proper_redirects",
                    "security_headers"
                ]
            },
            "concurrent_multiuser": {
                "description": "Test multiple users accessing system simultaneously",
                "concurrent_users": 5,
                "session_duration": 300,
                "checks": [
                    "no_data_leakage",
                    "individual_session_state",
                    "concurrent_form_submission",
                    "role_based_access"
                ]
            }
        },
        "performance_thresholds": {
            "page_load_time": 3000,
            "login_response_time": 2000,
            "navigation_response_time": 1500,
            "api_response_time": 1000,
            "touch_response_time": 100
        },
        "accessibility_requirements": {
            "minimum_touch_target_size": 44,
            "minimum_contrast_ratio": 4.5,
            "font_size_minimum": 14,
            "navigation_keyboard_accessible": true
        },
        "arabic_specific_tests": {
            "text_samples": [
                "مرحبا بك في ورشة العمل الشاملة",
                "إدارة المعدات والآلات",
                "طلبات الصيانة والإصلاح",
                "تقارير الأداء والإنتاجية",
                "النظام الشامل لإدارة الورشة"
            ],
            "ui_elements": [
                "navigation_menu",
                "form_labels",
                "button_text",
                "error_messages",
                "success_notifications"
            ],
            "layout_checks": [
                "menu_alignment",
                "form_field_order",
                "icon_positioning",
                "text_overflow_handling"
            ]
        },
        "security_tests": {
            "session_security": [
                "session_fixation_prevention",
                "proper_session_invalidation",
                "csrf_protection",
                "secure_cookie_flags"
            ],
            "authentication_security": [
                "password_field_masking",
                "login_attempt_limiting",
                "secure_password_transmission",
                "proper_error_handling"
            ]
        },
        "reporting": {
            "screenshot_capture": {
                "on_failure": true,
                "on_success": false,
                "comparison_baseline": true
            },
            "performance_metrics": {
                "response_times": true,
                "resource_loading": true,
                "memory_usage": false,
                "cpu_usage": false
            },
            "detailed_logs": {
                "network_requests": true,
                "console_errors": true,
                "javascript_exceptions": true,
                "security_warnings": true
            }
        }
    }
}