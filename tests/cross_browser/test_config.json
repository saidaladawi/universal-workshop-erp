                    "height": 1024,
                    "name": "tablet"
                },
                {
                    "width": 1920,
                    "height": 1080,
                    "name": "desktop"
                }
            ],
            "options": [
                "--no-sandbox",
                "--disable-dev-shm-usage",
                "--lang=ar"
            ]
        },
        "firefox": {
            "enabled": true,
            "headless": true,
            "language": "ar",
            "viewport_sizes": [
                {
                    "width": 375,
                    "height": 667,
                    "name": "mobile"
                },
                {
                    "width": 768,
                    "height": 1024,
                    "name": "tablet"
                },
                {
                    "width": 1920,
                    "height": 1080,
                    "name": "desktop"
                }
            ],
            "preferences": {
                "intl.locale.requested": "ar",
                "intl.accept_languages": "ar,ar-SA,en"
            }
        },
        "edge": {
            "enabled": true,
            "headless": true,
            "language": "ar",
            "viewport_sizes": [
                {
                    "width": 375,
                    "height": 667,
                    "name": "mobile"
                },
                {
                    "width": 768,
                    "height": 1024,
                    "name": "tablet"
                },
                {
                    "width": 1920,
                    "height": 1080,
                    "name": "desktop"
                }
            ],
            "options": [
                "--lang=ar"
            ]
        },
        "safari": {
            "enabled": false,
            "note": "Safari testing requires macOS and manual setup",
            "language": "ar",
            "viewport_sizes": [
                {
                    "width": 375,
                    "height": 667,
                    "name": "mobile"
                },
                {
                    "width": 768,
                    "height": 1024,
                    "name": "tablet"
                },
                {
                    "width": 1920,
                    "height": 1080,
                    "name": "desktop"
                }
            ]
        }
    },
    "test_scenarios": {
        "authentication": {
            "workshop_owner": {
                "username": "workshop.owner@test.com",
                "password": "test123",
                "expected_redirect": "/universal-workshop-dashboard",
                "role": "Workshop Owner",
                "test_priority": "high"
            },
            "workshop_manager": {
                "username": "workshop.manager@test.com",
                "password": "test123",
                "expected_redirect": "/app/workspace/Workshop%20Management",
                "role": "Workshop Manager",
                "test_priority": "high"
            },
            "technician": {
                "username": "technician@test.com",
                "password": "test123",
                "expected_redirect": "/technician",
                "role": "Workshop Technician",
                "test_priority": "medium"
            },
            "customer": {
                "username": "customer@test.com",
                "password": "test123",
                "expected_redirect": "/customer-portal",
                "role": "Customer",
                "test_priority": "medium"
            }
        }
    },
    "rtl_validation_rules": {
        "login_page": [
            {
                "selector": "body",
                "property": "direction",
                "expected": "rtl",
                "priority": "critical"
            },
            {
                "selector": ".login-form",
                "property": "text-align",
                "expected": "right",
                "priority": "high"
            },
            {
                "selector": ".form-control",
                "property": "text-align",
                "expected": "right",
                "priority": "high"
            },
            {
                "selector": ".btn-login",
                "property": "font-family",
                "expected": "Tajawal",
                "priority": "medium"
            }
        ],
        "dashboard": [
            {
                "selector": ".workshop-dashboard",
                "property": "direction",
                "expected": "rtl",
                "priority": "critical"
            },
            {
                "selector": ".navbar",
                "property": "direction",
                "expected": "rtl",
                "priority": "high"
            },
            {
                "selector": ".sidebar",
                "property": "right",
                "expected": "0",
                "priority": "medium"
            }
        ],
        "forms": [
            {
                "selector": ".form-control",
                "property": "text-align",
                "expected": "right",
                "priority": "high"
            },
            {
                "selector": ".form-label",
                "property": "text-align",
                "expected": "right",
                "priority": "high"
            },
            {
                "selector": ".input-group",
                "property": "flex-direction",
                "expected": "row-reverse",
                "priority": "medium"
            }
        ]
    },
    "performance_thresholds": {
        "page_load_time": {
            "excellent": 2.0,
            "good": 3.0,
            "acceptable": 5.0,
            "poor": 10.0
        },
        "login_time": {
            "excellent": 1.0,
            "good": 2.0,
            "acceptable": 3.0,
            "poor": 5.0
        },
        "navigation_time": {
            "excellent": 0.5,
            "good": 1.0,
            "acceptable": 2.0,
            "poor": 3.0
        }
    },
    "test_pages": {
        "critical": [
            "/login?lang=ar",
            "/universal-workshop-dashboard?lang=ar",
            "/technician?lang=ar"
        ],
        "important": [
            "/app/Customer?lang=ar",
            "/app/Vehicle?lang=ar",
            "/app/Service%20Order?lang=ar"
        ],
        "optional": [
            "/customer-portal?lang=ar",
            "/training-dashboard?lang=ar"
        ]
    },
    "accessibility_checks": {
        "enabled": true,
        "standards": [
            "WCAG2.1",
            "Section508"
        ],
        "checks": [
            "keyboard_navigation",
            "screen_reader_compatibility",
            "color_contrast",
            "focus_management",
            "aria_labels"
        ]
    },
    "responsive_breakpoints": {
        "xs": {
            "width": 320,
            "height": 568,
            "name": "extra_small"
        },
        "sm": {
            "width": 375,
            "height": 667,
            "name": "small_mobile"
        },
        "md": {
            "width": 768,
            "height": 1024,
            "name": "tablet"
        },
        "lg": {
            "width": 1024,
            "height": 768,
            "name": "laptop"
        },
        "xl": {
            "width": 1440,
            "height": 900,
            "name": "desktop"
        },
        "xxl": {
            "width": 1920,
            "height": 1080,
            "name": "large_desktop"
        }
    },
    "arabic_content_tests": {
        "text_samples": [
            "ورشة إصلاح السيارات العالمية",
            "طلب خدمة جديد",
            "معلومات المركبة",
            "تقرير الفاتورة",
            "حالة الطلب: في الانتظار"
        ],
        "number_formats": [
            "١٢٣٤٥",
            "123.45",
            "٢٠٢٥/٠٦/٢٥"
        ],
        "validation_rules": [
            "text_direction_preservation",
            "number_format_handling",
            "date_format_handling",
            "mixed_content_handling"
        ]
    },
    "error_handling": {
        "timeout_seconds": 30,
        "retry_attempts": 3,
        "screenshot_on_failure": true,
        "detailed_logging": true,
        "continue_on_error": false
    },
    "reporting": {
        "formats": [
            "json",
            "html",
            "pdf"
        ],
        "include_screenshots": true,
        "include_performance_metrics": true,
        "include_accessibility_results": true,
        "generate_recommendations": true,
        "email_notifications": {
            "enabled": false,
            "recipients": [],
            "on_failure_only": true
        }
    },
    "ci_cd_integration": {
        "github_actions": {
            "enabled": true,
            "workflow_file": ".github/workflows/rtl_tests.yml"
        },
        "jenkins": {
            "enabled": false,
            "pipeline_file": "Jenkinsfile.rtl"
        },
        "docker": {
            "enabled": true,
            "dockerfile": "tests/docker/Dockerfile.testing"
        }
    }
}