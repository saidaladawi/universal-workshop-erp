{
    "test_configuration": {
        "project_name": "Universal Workshop ERP",
        "test_type": "cross_browser_rtl_compatibility",
        "version": "1.0.0",
        "last_updated": "2025-06-25"
    },
    "browsers": {
        "chrome": {
            "enabled": true,
            "headless": true,
            "language": "ar",
            "viewport_sizes": [
