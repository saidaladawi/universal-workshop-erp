{
  "name": "universal-workshop-frontend-v2",
  "version": "2.0.0",
  "description": "Modernized frontend architecture for Universal Workshop ERP",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "lodash-es": "^4.17.21",
    "vue": "^3.5.17",
    "vue-i18n": "^11.1.8",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@types/node": "^20.19.2",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vitest/ui": "^1.6.1",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.0",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^8.55.0",
    "eslint-plugin-vue": "^9.19.0",
    "jsdom": "^23.2.0",
    "prettier": "^3.1.0",
    "sass": "^1.89.2",
    "typescript": "~5.3.0",
    "vite": "^5.4.19",
    "vitest": "^1.6.1",
    "vue-tsc": "^1.8.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-repo/universal-workshop.git"
  },
  "keywords": [
    "erp",
    "workshop",
    "automotive",
    "arabic",
    "vue",
    "typescript",
    "vite"
