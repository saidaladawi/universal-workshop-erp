# API Keys (Required to enable respective provider)
ANTHROPIC_API_KEY="your_anthropic_api_key_here"       # Required: Format: sk-ant-api03-...
PERPLEXITY_API_KEY="your_perplexity_api_key_here"     # Optional: Format: pplx-...
OPENAI_API_KEY="your_openai_api_key_here"             # Optional, for OpenAI/OpenRouter models. Format: sk-proj-...
GOOGLE_API_KEY="your_google_api_key_here"             # Optional, for Google Gemini models.
MISTRAL_API_KEY="your_mistral_key_here"               # Optional, for Mistral AI models.
XAI_API_KEY="YOUR_XAI_KEY_HERE"                       # Optional, for xAI AI models.
AZURE_OPENAI_API_KEY="your_azure_key_here"            # Optional, for Azure OpenAI models (requires endpoint in .taskmaster/config.json).
OLLAMA_API_KEY="your_ollama_api_key_here"             # Optional: For remote Ollama servers that require authentication.
GITHUB_API_KEY="your_github_api_key_here"             # Optional: For GitHub import/export features. Format: ghp_... or github_pat_...

# Universal Workshop ERP v2.0 Environment Configuration
# نظام إدارة الورش الشامل - إعدادات البيئة

# =================================
# DATABASE CONFIGURATION / إعدادات قاعدة البيانات
# =================================
DB_ROOT_PASSWORD=admin123
DB_NAME=universal_workshop
DB_USER=frappe
DB_PASSWORD=frappe_password_123

# =================================
# SITE CONFIGURATION / إعدادات الموقع
# =================================
SITE_NAME=workshop.local
ADMIN_PASSWORD=admin123
ENCRYPTION_KEY=your-32-character-encryption-key

# =================================
# LANGUAGE AND LOCALIZATION / اللغة والتوطين
# =================================
LANG=ar
COUNTRY=OM
TIMEZONE=Asia/Muscat
CURRENCY=OMR

# =================================
# BACKUP CONFIGURATION / إعدادات النسخ الاحتياطي
# =================================
BACKUP_RETENTION_DAYS=7
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# =================================
# EMAIL CONFIGURATION / إعدادات البريد الإلكتروني
# =================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_USE_TLS=true

# =================================
# SMS CONFIGURATION (Oman) / إعدادات الرسائل النصية (عمان)
# =================================
SMS_PROVIDER=omantel
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=WORKSHOP

# =================================
# ARABIC LOCALIZATION / التوطين العربي
# =================================
ARABIC_ENABLED=true
RTL_LAYOUT=true
ARABIC_FONTS=NotoSansArabic

# =================================
# OMAN-SPECIFIC SETTINGS / إعدادات خاصة بعمان
# =================================
BUSINESS_LICENSE_VALIDATION=true
VAT_RATE=5.0
WORKING_DAYS=sun,mon,tue,wed,thu
WEEKEND_DAYS=fri,sat

# =================================
# SECURITY SETTINGS / إعدادات الأمان
# =================================
SECRET_KEY=your-very-long-secret-key-here
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
PASSWORD_MIN_LENGTH=8

# =================================
# PERFORMANCE SETTINGS / إعدادات الأداء
# =================================
REDIS_CACHE_TTL=3600
MAX_UPLOAD_SIZE=25MB
MAX_CONCURRENT_USERS=50

# =================================
# DEVELOPMENT SETTINGS / إعدادات التطوير
# =================================
DEBUG_MODE=false
LOG_LEVEL=INFO
ENABLE_API_LOGGING=true